[Unit]
Description=FastAPI application
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/dk-backend
Environment="PATH=/home/ubuntu/dk-backend/.venv/bin"
Environment="PYTHONPATH=/home/ubuntu/dk-backend"
ExecStart=/home/ubuntu/dk-backend/.venv/bin/gunicorn app.main:app -w 4 -k uvicorn.workers.UvicornWorker

[Install]
WantedBy=multi-user.target